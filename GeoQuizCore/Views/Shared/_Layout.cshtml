@{ 
    string language = Context.Session.GetString("Language");
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" type="text/css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
    <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" href="/favicon-32x32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="/favicon-16x16.png" sizes="16x16">
    <link rel="manifest" href="/manifest.json">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#50c0c3">
    <meta name="theme-color" content="#ffffff">
    <!-- /Favicon -->
    <link href="~/css/site.min.css" type="text/css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="~/js/javascript.min.js"></script>
    <script async src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
    <script>$(function () { $.material.init(); });</script>
    <span id="forkongithub"><a href="https://github.com/SerGreen/GeoQuizCore" target="_blank">View source on GitHub</a></span>
    <div class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <a href="@Url.Action(nameof(MenuController.Index), MenuController.Nameof, new { lang = language })" class="navbar-brand" style="font-size:xx-large"><span class="glyphicon glyphicon-globe" id="geo-icon"></span> GeoQuiz</a>
            </div>
            <ul id="language-button-container" class="nav navbar-nav">
                <li>
                    <button id="language-button" class="navbar-link pull-right btn" type="button"><i class="material-icons">language</i></button>
                    <div id="language-box" class="well well-sm language-box">
                        <a href="@Url.Action(nameof(MenuController.Index), MenuController.Nameof, new { lang = "en" })"><img src="~/images/Flags/187.png" /></a>
                        <a href="@Url.Action(nameof(MenuController.Index), MenuController.Nameof, new { lang = "ru" })"><img src="~/images/Flags/143.png" /></a>
                    </div>
                </li>
            </ul>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()        
    </div>

    <hr />
    <footer class="text-center">
        <p>&copy; @DateTime.Now.Year - SerGreen</p>
    </footer>
    <script>
        var languageButtonOn = false;
        var languageBox = $('#language-box');
        $('#language-button').click(function () {
            if (languageButtonOn) {
                $(this).css('transform', '');
                languageBox.css('transform', '');
            }
            else {
                $(this).css('transform', 'rotateY(180deg)');
                setTimeout(function () { languageBox.css('transform', 'translateX(-50%) rotateY(0deg)'); }, 130);
            }
            languageButtonOn = !languageButtonOn;
        });
    </script>
    <script>
        (function (i, s, o, g, r, a, m) {
        i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
            (i[r].q = i[r].q || []).push(arguments)
        }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');
        ga('create', 'UA-93973128-1', 'auto');
        ga('send', 'pageview');
    </script>
</body>
</html>